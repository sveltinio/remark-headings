{
	"name": "@sveltinio/remark-headings",
	"version": "1.0.2",
	"packageManager": "pnpm@8.6.8",
	"type": "module",
	"description": "Extracts the headings tree from your markdown and add it to the frontmatter.",
	"author": "sveltinio <dev@sveltin.io>",
	"license": "MIT",
	"homepage": "https://github.com/sveltinio/remark-headings#readme",
	"repository": {
		"type": "git",
		"url": "git+https://github.com/sveltinio/remark-headings.git"
	},
	"bugs": "https://github.com/sveltinio/remark-headings/issues",
	"keywords": [
		"remark plugin",
		"mdast",
		"headings",
		"toc",
		"mdsvex",
		"table of contents",
		"vFile"
	],
	"dependencies": {
		"@types/mdast": "^4.0.0",
		"abstract-syntax-tree": "^2.21.0",
		"github-slugger": "^2.0.0",
		"mdast-util-to-string": "^4.0.0",
		"unist-util-visit": "^5.0.0"
	},
	"devDependencies": {
		"@release-it/conventional-changelog": "^7.0.0",
		"@tsconfig/recommended": "^1.0.2",
		"prettier": "^3.0.0",
		"release-it": "^16.1.2",
		"remark": "14.0.3",
		"rimraf": "^5.0.1",
		"tsup": "^7.1.0",
		"typescript": "^5.1.6",
		"vfile-reporter": "^8.0.0"
	},
	"scripts": {
		"build": "tsup",
		"clean": "rimraf dist",
		"watch": "pnpm build -- --watch src",
		"format": "prettier --plugin-search-dir=. --write .",
		"prepublishOnly": "pnpm build",
		"release": "release-it"
	},
	"main": "./dist/index.js",
	"module": "./dist/index.js",
	"types": "./dist/index.d.ts",
	"files": [
		"dist"
	],
	"publishConfig": {
		"access": "public"
	},
	"exports": {
		".": {
			"types": "./dist/index.d.ts",
			"import": "./dist/index.js",
			"require": "./dist/index.cjs"
		}
	}
}
